---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import MovieCarousel from '../../components/movie/MovieCarousel.astro';
import { getMovieDetailBySlug, getNewUpdatedMovies, getImageUrl } from '../../lib/movieService';

const { id } = Astro.params;
console.log("id: ", id);


if (!id) {
  return Astro.redirect('/movies');
}

// Fetch movie details
const movieData = await getMovieDetailBySlug(id) as any;

const movie = movieData?.movie;
const episodes = movieData?.episodes || [];

if (!movie) {
  return Astro.redirect('/movies');
}

// Fetch related movies
const relatedRes = await getNewUpdatedMovies(1) as any;
const relatedMovies = relatedRes?.items?.slice(0, 12) || [];

const genres = movie.category?.map((c: any) => c.name) || [];
const countries = movie.country?.map((c: any) => c.name) || [];
---

<BaseLayout title={`${movie.name} - Movie247`}>
  <Header />
  
  <main class="movie-detail">
    <!-- Backdrop -->
    <div class="backdrop">
      <img src={getImageUrl(movie.poster_url)} alt={movie.name} />
      <div class="backdrop-overlay"></div>
    </div>

    <div class="container">
      <div class="movie-content">
        <!-- Poster -->
        <div class="movie-poster">
          <img src={getImageUrl(movie.poster_url)} alt={movie.name} />
          <div class="poster-badges">
            <span class="badge-quality">{movie.quality || 'HD'}</span>
            <span class="badge-lang">{movie.lang || 'Vietsub'}</span>
          </div>
        </div>

        <!-- Info -->
        <div class="movie-info">
          <h1 class="movie-title">{movie.name}</h1>
          <p class="movie-origin-name">{movie.origin_name}</p>

          <!-- Meta -->
          <div class="movie-meta">
            <span class="meta-item">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
              8.5
            </span>
            <span class="meta-divider">|</span>
            <span>{movie.year}</span>
            <span class="meta-divider">|</span>
            <span>{movie.time || 'N/A'}</span>
            <span class="meta-divider">|</span>
            <span>{movie.episode_current}</span>
          </div>

          <!-- Genres -->
          <div class="movie-genres">
            {genres.map((genre: string) => (
              <a href={`/movies?genre=${genre.toLowerCase().replace(/\s+/g, '-')}`} class="genre-tag">
                {genre}
              </a>
            ))}
          </div>

          <!-- Synopsis -->
          <div class="movie-synopsis">
            <h3>Nội dung phim</h3>
            <p set:html={movie.content || 'Đang cập nhật...'} />
          </div>

          <!-- Details -->
          <div class="movie-details">
            <div class="detail-row">
              <span class="detail-label">Đạo diễn:</span>
              <span>{movie.director?.join(', ') || 'Đang cập nhật'}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Diễn viên:</span>
              <span>{movie.actor?.slice(0, 5).join(', ') || 'Đang cập nhật'}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Quốc gia:</span>
              <span>{countries.join(', ') || 'Đang cập nhật'}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Trạng thái:</span>
              <span>{movie.episode_current}</span>
            </div>
          </div>

          <!-- Actions -->
          <div class="movie-actions">
            <a href={`/watch/${movie.slug}`} class="btn btn-primary btn-lg">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
              Xem Phim
            </a>
            {movie.trailer_url && (
              <button class="btn btn-secondary btn-lg" id="trailer-btn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"/>
                  <line x1="7" y1="2" x2="7" y2="22"/>
                  <line x1="17" y1="2" x2="17" y2="22"/>
                  <line x1="2" y1="12" x2="22" y2="12"/>
                  <line x1="2" y1="7" x2="7" y2="7"/>
                  <line x1="2" y1="17" x2="7" y2="17"/>
                  <line x1="17" y1="17" x2="22" y2="17"/>
                  <line x1="17" y1="7" x2="22" y2="7"/>
                </svg>
                Xem Trailer
              </button>
            )}
          </div>
        </div>
      </div>

      <!-- Episodes -->
      {episodes.length > 0 && episodes[0]?.server_data?.length > 1 && (
        <section class="episodes-section">
          <h2>Danh Sách Tập</h2>
          <div class="episodes-grid">
            {episodes[0].server_data.map((ep: any) => (
              <a href={`/watch/${movie.slug}?ep=${ep.slug}`} class="episode-btn">
                {ep.name}
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Related Movies -->
      {relatedMovies.length > 0 && (
        <MovieCarousel 
          title="Phim Đề Xuất" 
          movies={relatedMovies}
          viewAllLink="/movies"
          useApi={true}
        />
      )}
    </div>

    <!-- Trailer Modal -->
    {movie.trailer_url && (
      <div class="modal" id="trailer-modal">
        <div class="modal-content">
          <button class="modal-close" id="modal-close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
          </button>
          <div class="video-wrapper">
            <iframe id="trailer-iframe" src="" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    )}
  </main>

  <Footer />
</BaseLayout>

<style>
  .movie-detail {
    position: relative;
    padding-top: var(--header-height);
  }

  /* Backdrop */
  .backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    min-height: 100vh;
    z-index: -1;
  }

  .backdrop img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(20px);
    opacity: 0.3;
  }

  .backdrop-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent, var(--color-background) 90%);
  }

  /* Content */
  .movie-content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: var(--spacing-2xl);
    padding: var(--spacing-2xl) 0;
  }

  /* Poster */
  .movie-poster {
    position: relative;
  }

  .movie-poster img {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
  }

  .poster-badges {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    display: flex;
    gap: var(--spacing-xs);
  }

  .badge-quality, .badge-lang {
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-size: 11px;
    font-weight: var(--font-weight-semibold);
  }

  .badge-quality {
    background: var(--color-primary);
    color: var(--color-background);
  }

  .badge-lang {
    background: rgba(0, 0, 0, 0.8);
    color: var(--color-text-primary);
  }

  /* Info */
  .movie-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-xs);
  }

  .movie-origin-name {
    font-size: var(--font-size-md);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .movie-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .movie-meta .meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--color-rating);
  }

  .movie-meta .meta-item svg {
    fill: var(--color-rating);
  }

  .meta-divider {
    color: var(--color-text-muted);
  }

  .movie-genres {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
  }

  .genre-tag {
    padding: 6px 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .genre-tag:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }

  .movie-synopsis {
    margin-bottom: var(--spacing-lg);
  }

  .movie-synopsis h3 {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
  }

  .movie-synopsis p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .movie-details {
    margin-bottom: var(--spacing-xl);
  }

  .detail-row {
    display: flex;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
    margin-bottom: var(--spacing-sm);
  }

  .detail-label {
    color: var(--color-text-muted);
    min-width: 90px;
  }

  .movie-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  /* Episodes */
  .episodes-section {
    padding: var(--spacing-2xl) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--spacing-xl);
  }

  .episodes-section h2 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-lg);
  }

  .episodes-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .episode-btn {
    padding: 8px 16px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-primary);
    transition: all var(--transition-fast);
  }

  .episode-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }

  /* Modal */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 2000;
    display: none;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.9);
    padding: var(--spacing-lg);
  }

  .modal.active {
    display: flex;
  }

  .modal-content {
    position: relative;
    width: 100%;
    max-width: 900px;
  }

  .modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    color: var(--color-text-primary);
    padding: var(--spacing-sm);
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    background: var(--color-background);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .video-wrapper iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .movie-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .movie-poster {
      max-width: 300px;
      margin: 0 auto;
    }

    .movie-genres, .movie-actions {
      justify-content: center;
    }

    .movie-details {
      display: inline-block;
      text-align: left;
    }
  }
</style>

<script define:vars={{ trailerUrl: movie.trailer_url }}>
  const trailerBtn = document.getElementById('trailer-btn');
  const modal = document.getElementById('trailer-modal');
  const modalClose = document.getElementById('modal-close');
  const trailerIframe = document.getElementById('trailer-iframe');

  trailerBtn?.addEventListener('click', () => {
    if (trailerIframe && trailerUrl) {
      trailerIframe.src = trailerUrl;
    }
    modal?.classList.add('active');
  });

  modalClose?.addEventListener('click', () => {
    modal?.classList.remove('active');
    if (trailerIframe) trailerIframe.src = '';
  });

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.remove('active');
      if (trailerIframe) trailerIframe.src = '';
    }
  });
</script>
