---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import MovieCard from '../../components/movie/MovieCard.astro';
import { getMoviesByCategory, getMoviesByGenre, getMoviesByNation, searchMoviesByKeyword, getImageUrl } from '../../lib/movieService';
import { MOVIE_GENRES, MOVIE_NATIONS, MOVIE_CATEGORIES } from '../../lib/constants';
import { useTranslations, getGenreName, getNationName, getCategoryName } from '../../lib/useTranslations';

const langCookie = Astro.cookies.get('language');
const { translations, lang, t } = useTranslations(langCookie?.value);

const url = Astro.url;
const genreParam = url.searchParams.get('genre');
const nationParam = url.searchParams.get('nation');
const categoryParam = url.searchParams.get('category') || 'phim-le';
const keywordParam = url.searchParams.get('keyword');
const pageParam = parseInt(url.searchParams.get('page') || '1');

// Fetch movies based on filters
let moviesData: any = null;
let pageTitle = 'Phim Lẻ';

if (keywordParam) {
  moviesData = await searchMoviesByKeyword(keywordParam, pageParam);
  pageTitle = `${translations.nav.search}: "${keywordParam}"`;
} else if (genreParam) {
  moviesData = await getMoviesByGenre(genreParam, pageParam);
  const genre = MOVIE_GENRES.find(g => g.slug === genreParam);
  pageTitle = genre ? `Thể loại: ${genre.name}` : 'Phim Theo Thể Loại';
} else if (nationParam) {
  moviesData = await getMoviesByNation(nationParam, pageParam);
  const nation = MOVIE_NATIONS.find(n => n.slug === nationParam);
  pageTitle = nation ? `Quốc gia: ${nation.name}` : 'Phim Theo Quốc Gia';
} else {
  moviesData = await getMoviesByCategory(categoryParam, pageParam, 24);
  const category = MOVIE_CATEGORIES.find(c => c.slug === categoryParam);
  pageTitle = category ? category.name : 'Phim Lẻ';
}

const movies = moviesData?.data?.items || [];
const pagination = moviesData?.data?.params?.pagination || { currentPage: 1, totalPages: 1, totalItems: 0 };



// Update pageTitle for i18n
// Update pageTitle for i18n
if (keywordParam) {
   pageTitle = `${translations.nav.search}: "${keywordParam}"`;
} else if (genreParam) {
  const genre = MOVIE_GENRES.find(g => g.slug === genreParam);
  pageTitle = genre ? `${translations.movie.genre}: ${getGenreName(genre.slug, lang)}` : translations.genres.title;
} else if (nationParam) {
  const nation = MOVIE_NATIONS.find(n => n.slug === nationParam);
  pageTitle = nation ? `${translations.movie.country}: ${getNationName(nation.slug, lang)}` : translations.movie.country;
} else {
  const category = MOVIE_CATEGORIES.find(c => c.slug === categoryParam);
  pageTitle = category ? getCategoryName(category.slug, lang) : translations.nav.movies;
}
---

<BaseLayout title={`${pageTitle} - Movie247`}>
  <Header />
  
  <main class="page-content">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <h1>{pageTitle}</h1>
        <p>{translations.common.of} {pagination.totalItems || movies.length} {translations.nav.movies.toLowerCase()}</p>
      </div>

      <!-- Filters -->
      <div class="filters-container">
        <!-- Search Bar -->
        <form class="search-form" action="/movies" method="get">
           <div class="search-input-wrapper">
            <input 
              type="text" 
              name="keyword" 
              placeholder={translations.nav.search + "..."} 
              value={keywordParam || ''}
              class="search-input"
            />
            <button type="submit" class="search-btn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
            </button>
          </div>
          {genreParam && <input type="hidden" name="genre" value={genreParam} />}
          {nationParam && <input type="hidden" name="nation" value={nationParam} />}
          {/* Allow combining search with genre/nation if needed, or clear them. Usually search is standalone, but keeping context is nice. */}
        </form>
        
        <button id="filter-toggle-btn" class="filter-toggle-btn" aria-label={translations.search.toggleFilters}>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
          </svg>
        </button>

        <div id="filters-content" class="filters">
        <!-- Category Filter -->
        <div class="filter-section">
          <label>{translations.movie.status}:</label>
          <div class="filter-pills">
            <a href="/movies?category=phim-le" class:list={["filter-pill", { active: categoryParam === 'phim-le' && !genreParam && !nationParam }]}>
              {translations.nav.movies}
            </a>
            <a href="/tv-shows" class="filter-pill">
              {translations.nav.tvShows}
            </a>
            <a href="/movies?category=hoat-hinh" class:list={["filter-pill", { active: categoryParam === 'hoat-hinh' }]}>
              {translations.nav.animation}
            </a>
          </div>
        </div>

        <!-- Genre Filter -->
        <div class="filter-section">
          <label>{translations.movie.genre}:</label>
          <select id="genre-select" class="filter-select">
            <option value="">{translations.search.sortBy}</option>
            {MOVIE_GENRES.map(genre => (
              <option value={genre.slug} selected={genreParam === genre.slug}>{getGenreName(genre.slug, lang)}</option>
            ))}
          </select>
        </div>

        <!-- Nation Filter -->
        <div class="filter-section">
          <label>{translations.movie.country}:</label>
          <select id="nation-select" class="filter-select">
            <option value="">{translations.search.sortBy}</option>
            {MOVIE_NATIONS.map(nation => (
              <option value={nation.slug} selected={nationParam === nation.slug}>{getNationName(nation.slug, lang)}</option>
            ))}
          </select>
        </div>
        </div>
      </div>

      <!-- Active Filters -->
      {(genreParam || nationParam) && (
        <div class="active-filters">
          <span>{translations.nav.search}:</span>
          {genreParam && (
            <a href={`/movies${nationParam ? `?nation=${nationParam}` : ''}`} class="filter-tag">
              {getGenreName(genreParam, lang)}
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
              </svg>
            </a>
          )}
          {nationParam && (
            <a href={`/movies${genreParam ? `?genre=${genreParam}` : ''}`} class="filter-tag">
              {getNationName(nationParam, lang)}
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
              </svg>
            </a>
          )}
          <a href="/movies" class="clear-all">{translations.common.noResults}</a>
        </div>
      )}

      <!-- Movies Grid -->
      {movies.length > 0 ? (
        <div class="movies-grid">
          {movies.map((movie: any) => (
            <MovieCard
              id={movie.slug}
              title={movie.origin_name || movie.name}
              titleVi={movie.name}
              year={movie.year || 2024}
              rating={8.0}
              poster={getImageUrl(movie.poster_url)}
              genres={movie.category?.slice(0, 2).map((c: any) => c.name) || []}
              duration={movie.time || movie.episode_current || ''}
            />
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>{translations.messages.noMoviesFound}</p>
          <a href="/movies" class="btn btn-primary">{translations.common.viewAll}</a>
        </div>
      )}

      <!-- Pagination -->
      <!-- Pagination -->
      {pagination.totalPages > 1 && (
        <div class="pagination">
          {/* First Page */}
          {pageParam > 1 && (
             <a href={`/movies?${new URLSearchParams({
              ...(categoryParam && { category: categoryParam }),
              ...(genreParam && { genre: genreParam }),
              ...(nationParam && { nation: nationParam }),
              ...(keywordParam && { keyword: keywordParam }),
              page: '1'
            }).toString()}`} class="pagination-btn icon-btn" title="First Page">
              «
            </a>
          )}

          {/* Previous Page */}
          {pageParam > 1 && (
            <a href={`/movies?${new URLSearchParams({
              ...(categoryParam && { category: categoryParam }),
              ...(genreParam && { genre: genreParam }),
              ...(nationParam && { nation: nationParam }),
              ...(keywordParam && { keyword: keywordParam }),
              page: String(pageParam - 1)
            }).toString()}`} class="pagination-btn">
              ← {translations.common.previous}
            </a>
          )}
          
          <div class="pagination-controls">
            <span class="pagination-text">{translations.common.page}</span>
            <form class="pagination-form" action="/movies" method="get">
              {categoryParam && <input type="hidden" name="category" value={categoryParam} />}
              {genreParam && <input type="hidden" name="genre" value={genreParam} />}
              {nationParam && <input type="hidden" name="nation" value={nationParam} />}
              {keywordParam && <input type="hidden" name="keyword" value={keywordParam} />}
              <input 
                type="number" 
                name="page" 
                min="1" 
                max={pagination.totalPages} 
                value={pageParam} 
                class="pagination-input"
              />
            </form>
            <span class="pagination-text">/ {pagination.totalPages}</span>
          </div>
          
          {/* Next Page */}
          {pageParam < pagination.totalPages && (
            <a href={`/movies?${new URLSearchParams({
              ...(categoryParam && { category: categoryParam }),
              ...(genreParam && { genre: genreParam }),
              ...(nationParam && { nation: nationParam }),
              ...(keywordParam && { keyword: keywordParam }),
              page: String(pageParam + 1)
            }).toString()}`} class="pagination-btn">
              {translations.common.next} →
            </a>
          )}

           {/* Last Page */}
           {pageParam < pagination.totalPages && (
            <a href={`/movies?${new URLSearchParams({
              ...(categoryParam && { category: categoryParam }),
              ...(genreParam && { genre: genreParam }),
              ...(nationParam && { nation: nationParam }),
              ...(keywordParam && { keyword: keywordParam }),
              page: String(pagination.totalPages)
            }).toString()}`} class="pagination-btn icon-btn" title="Last Page">
              »
            </a>
          )}
        </div>
      )}
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page-content {
    padding-top: calc(var(--header-height) + var(--spacing-2xl));
    min-height: 100vh;
  }

  .page-header {
    margin-bottom: var(--spacing-xl);
  }

  .page-header h1 {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-xs);
  }

  .page-header p {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  /* Filters Container */
  .filters-container {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    padding: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center; /* Vertically align items */
  }

  /* Search Form */
  .search-form {
    flex: 1; /* Take available width */
    min-width: 200px; /* Minimum width */
    margin-bottom: 0; /* Remove bottom margin to align with filters */
  }

  .search-input-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .search-input {
    width: 100%;
    padding: 8px 12px;
    padding-right: 40px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
    transition: all var(--transition-fast);
  }

  .search-input:focus {
    border-color: var(--color-primary);
    outline: none;
    box-shadow: 0 0 0 2px rgba(var(--color-primary-rgb), 0.1);
  }

  .search-btn {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 4px;
    transition: color var(--transition-fast);
  }

  .search-btn:hover {
    color: var(--color-primary);
  }

  /* Filter Toggle Btn */
  .filter-toggle-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .filter-toggle-btn:hover, .filter-toggle-btn.active {
    color: var(--color-primary);
    border-color: var(--color-primary);
    background: var(--color-surface-hover);
  }

  /* Filters */
  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
    width: 100%;
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--color-border);
    margin-top: var(--spacing-xs);
    transition: all var(--transition-normal);
  }
  
  .filters.hidden {
    display: none;
  }



  .filter-section {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .filter-section label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .filter-pills {
    display: flex;
    gap: var(--spacing-xs);
  }

  .filter-pill {
    padding: 6px 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  .filter-pill:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text-primary);
  }

  .filter-pill.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }

  .filter-select {
    padding: 6px 12px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
    min-width: 120px;
  }

  /* Active Filters */
  .active-filters {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-sm);
  }

  .active-filters > span {
    color: var(--color-text-muted);
  }

  .filter-tag {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    color: var(--color-background);
  }

  .filter-tag:hover {
    opacity: 0.9;
    color: var(--color-background);
  }

  .clear-all {
    color: var(--color-text-muted);
    text-decoration: underline;
  }

  /* Grid */
  .movies-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--spacing-md);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--spacing-3xl);
    color: var(--color-text-muted);
  }

  .empty-state p {
    margin-bottom: var(--spacing-lg);
  }

  /* Pagination */
  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-2xl);
    padding: var(--spacing-lg) 0;
  }

  .pagination-btn {
    padding: 8px 16px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-primary);
    transition: all var(--transition-fast);
  }

  .pagination-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-background);
  }

  .pagination-info {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .pagination-controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .pagination-text {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .pagination-input {
    width: 60px;
    padding: 6px 4px;
    text-align: center;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
    -moz-appearance: textfield;
  }
  
  .pagination-input::-webkit-outer-spin-button,
  .pagination-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .pagination-input:focus {
    border-color: var(--color-primary);
    outline: none;
  }

  .icon-btn {
    padding: 8px 12px;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .movies-grid { grid-template-columns: repeat(5, 1fr); }
  }

  @media (max-width: 992px) {
    .movies-grid { grid-template-columns: repeat(4, 1fr); }
    .filters { flex-direction: column; align-items: flex-start; }
  }

  @media (max-width: 768px) {
    .movies-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 576px) {
    .movies-grid { grid-template-columns: repeat(2, 1fr); gap: var(--spacing-sm); }
  }
</style>

<script>
  const genreSelect = document.getElementById('genre-select') as HTMLSelectElement;
  const nationSelect = document.getElementById('nation-select') as HTMLSelectElement;
  const filterToggleBtn = document.getElementById('filter-toggle-btn');
  const filtersContent = document.getElementById('filters-content');

  // Load filter state
  const isFiltersVisible = localStorage.getItem('filtersVisible') !== 'false'; // Default true
  if (!isFiltersVisible) {
    filtersContent?.classList.add('hidden');
  } else {
    filterToggleBtn?.classList.add('active');
  }

  filterToggleBtn?.addEventListener('click', () => {
    const isHidden = filtersContent?.classList.toggle('hidden');
    filterToggleBtn.classList.toggle('active', !isHidden);
    localStorage.setItem('filtersVisible', String(!isHidden));
  });

  function applyFilters() {
    const params = new URLSearchParams();
    
    if (genreSelect?.value) params.set('genre', genreSelect.value);
    if (nationSelect?.value) params.set('nation', nationSelect.value);
    
    // Preserve keyword if exists
    const urlParams = new URLSearchParams(window.location.search);
    const keyword = urlParams.get('keyword');
    if (keyword) params.set('keyword', keyword);

    window.location.href = `/movies${params.toString() ? '?' + params.toString() : ''}`;
  }

  genreSelect?.addEventListener('change', applyFilters);
  nationSelect?.addEventListener('change', applyFilters);
</script>
