---
import { useTranslations } from '../../lib/useTranslations';
import { getImageUrl } from '../../lib/movieService';

interface Props {
  title: string;
  viewAllLink?: string;
}

const { title, viewAllLink } = Astro.props;

// Get translations
const langCookie = Astro.cookies.get('language');
const { translations, lang } = useTranslations(langCookie?.value);
---

<section class="continue-section" id="continue-watching-section" style="display: none;">
  <div class="container">
    <div class="carousel-header">
      <h2 class="carousel-title">{title}</h2>
      <div class="carousel-actions">
        {viewAllLink && (
          <a href={viewAllLink} class="view-all">
            {translations.common.viewAll}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        )}
        <div class="carousel-nav">
          <button class="nav-btn nav-prev" id="cw-prev" aria-label="Previous">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
          </button>
          <button class="nav-btn nav-next" id="cw-next" aria-label="Next">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class="carousel-track continue-track" id="continue-watching-track">
      <!-- Injected via JS -->
    </div>
  </div>
</section>

<!-- Template for client-side rendering -->
<template id="continue-card-template">
  <div class="continue-card-wrapper">
    <a href="" class="continue-card">
      <div class="continue-card__poster">
        <img src="" alt="" loading="lazy"/>
        <div class="continue-card__overlay">
          <button class="play-btn" aria-label="Tiếp tục xem">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="5 3 19 12 5 21 5 3"/>
            </svg>
          </button>
        </div>
        
        <!-- Popup Info -->
        <div class="continue-card__popup">
          <div class="popup-content">
            <h4 class="popup-title"></h4>
            <div class="popup-meta">
               <span class="popup-year"></span>
               <span class="popup-duration"></span>
            </div>
            <p class="popup-desc"></p>
            
            <div class="popup-actions">
              <button class="popup-btn play-btn-small">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="5 3 19 12 5 21 5 3"/>
                </svg>
                Xem ngay
              </button>
              <button class="popup-btn watchlist-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 5v14M5 12h14"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <div class="continue-card__progress">
          <div class="progress-bar" style="width: 0%"></div>
        </div>
        <span class="continue-card__duration"></span>
      </div>
      <div class="continue-card__info">
        <h3 class="continue-card__title"></h3>
        <span class="continue-card__episode"></span>
      </div>
    </a>
  </div>
</template>

<style>
  .continue-section {
    padding: var(--spacing-lg) 0;
  }

  .carousel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-lg);
    gap: var(--spacing-md);
  }

  .carousel-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
  }

  .carousel-actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .view-all {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .view-all:hover {
    color: var(--color-primary);
  }

  .carousel-nav {
    display: flex;
    gap: var(--spacing-xs);
  }

  .nav-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
    cursor: pointer;
  }

  .nav-btn:hover {
    background: var(--color-surface-hover);
    color: var(--color-text-primary);
  }

  .continue-track {
    display: flex;
    gap: var(--spacing-md);
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    padding-bottom: var(--spacing-sm);
  }

  .continue-track::-webkit-scrollbar {
    display: none;
  }

  /* Card Styles */
  .continue-track :global(.continue-card-wrapper) {
      flex: 0 0 calc((100% - 2 * var(--spacing-md)) / 3);
      min-width: 280px;
      flex-shrink: 0;
      position: relative;
  }

  .continue-track :global(.continue-card) {
    display: block;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .continue-track :global(.continue-card:hover .continue-card__popup) {
    opacity: 1;
    visibility: visible;
  }
  
  .continue-track :global(.continue-card:hover .popup-content) {
      transform: translateY(0);
  }

  .continue-track :global(.continue-card:hover img) {
    transform: scale(1.05);
  }

  /* Poster - 16:9 ratio */
  .continue-track :global(.continue-card__poster) {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: var(--radius-lg);
    background: var(--color-surface);
  }

  .continue-track :global(.continue-card__poster img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .continue-track :global(.continue-card__overlay) {
    position: absolute;
    inset: 0;
    pointer-events: none; /* Let clicks pass to popup actions if overlapping, or use z-index */
    background: rgba(0, 0, 0, 0.2); 
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }
  /* Overlay play button only shows if card hovered but popup not covering it? 
     Actually, if we have a popup, do we still want the big center play button? 
     Maybe redundant. I'll keep it but it might be covered by popup. */
  
  .continue-track :global(.continue-card:hover .continue-card__overlay) {
      opacity: 1;
  }

  .continue-track :global(.play-btn) {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    color: var(--color-background);
    transition: transform var(--transition-fast);
    border: none;
    cursor: pointer;
  }

  .continue-track :global(.play-btn:hover) {
    transform: scale(1.1);
  }
  
  /* Popup Overlay */
  .continue-track :global(.continue-card__popup) {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.95) 0%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,0.2) 100%);
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: var(--spacing-sm);
    z-index: 10;
  }
  
  .continue-track :global(.popup-content) {
      transform: translateY(10px);
      transition: transform var(--transition-normal);
      width: 100%;
  }

  .continue-track :global(.popup-title) {
    font-size: var(--font-size-sm);
    font-weight: bold;
    color: white;
    margin-bottom: 4px;
    line-height: 1.2;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .continue-track :global(.popup-meta) {
    display: flex;
    gap: 8px;
    font-size: 11px;
    color: var(--color-text-secondary);
    margin-bottom: 6px;
    align-items: center;
  }

  .continue-track :global(.popup-desc) {
    font-size: 11px;
    color: var(--color-text-muted);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .continue-track :global(.popup-actions) {
    display: flex;
    gap: 8px;
  }

  .continue-track :global(.popup-btn) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    border-radius: var(--radius-full);
    border: none;
    cursor: pointer;
    font-size: 12px;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .continue-track :global(.play-btn-small) {
    flex: 1;
    background: white;
    color: black;
    padding: 6px 12px;
  }
  
  .continue-track :global(.play-btn-small:hover) {
    background: var(--color-primary);
    color: white;
  }

  .continue-track :global(.watchlist-btn) {
    width: 32px;
    height: 32px;
    background: rgba(255,255,255,0.1);
    color: white;
    border: 1px solid rgba(255,255,255,0.2);
  }
  
  .continue-track :global(.watchlist-btn:hover) {
    background: rgba(255,255,255,0.2);
    border-color: white;
  }
  
  .continue-track :global(.watchlist-btn.active) {
      background: var(--color-primary);
      border-color: var(--color-primary);
      color: white;
  }

  /* Progress Bar */
  .continue-track :global(.continue-card__progress) {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    z-index: 11;
  }

  .continue-track :global(.progress-bar) {
    height: 100%;
    background: var(--color-primary);
    border-radius: 0 2px 2px 0;
    transition: width var(--transition-normal);
  }

  /* Duration Badge */
  .continue-track :global(.continue-card__duration) {
    position: absolute;
    bottom: 12px;
    right: 8px;
    padding: 2px 6px;
    background: rgba(0, 0, 0, 0.8);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    z-index: 9;
  }

  /* Info */
  .continue-track :global(.continue-card__info) {
    padding: var(--spacing-sm) 0;
  }

  .continue-track :global(.continue-card__title) {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    margin-bottom: 2px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .continue-track :global(.continue-card__episode) {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .continue-track :global(.continue-card-wrapper) {
      flex: 0 0 calc((100% - var(--spacing-md)) / 2);
      min-width: 260px;
    }
  }

  @media (max-width: 576px) {
    .continue-track :global(.continue-card-wrapper) {
      flex: 0 0 85%;
      min-width: 240px;
    }

    .continue-track :global(.play-btn) {
      width: 44px;
      height: 44px;
    }
    
    .view-all {
      display: none;
    }
  }
</style>

<script>
  import { getHistory, toggleWatchlist, isInWatchlist } from '../../lib/watchlist';
  import { getImageUrl } from '../../lib/movieService';

  // Get User language for displaying titles
  const lang = document.documentElement.lang || 'vi';

  function renderContinueWatching() {
    const history = getHistory().slice(0, 10);
    const section = document.getElementById('continue-watching-section');
    const track = document.getElementById('continue-watching-track');
    const template = document.getElementById('continue-card-template') as HTMLTemplateElement;

    if (!section || !track || !template) return;

    if (history.length === 0) {
      section.style.display = 'none';
      return;
    }

    section.style.display = 'block';
    track.innerHTML = '';

    history.forEach(item => {
      const clone = template.content.cloneNode(true) as DocumentFragment;
      const link = clone.querySelector('.continue-card') as HTMLAnchorElement;
      const img = clone.querySelector('img') as HTMLImageElement;
      // Info under card
      const titleEl = clone.querySelector('.continue-card__title');
      const episodeEl = clone.querySelector('.continue-card__episode');
      const durationBadge = clone.querySelector('.continue-card__duration');
      
      // Popup elements
      const popupTitle = clone.querySelector('.popup-title');
      const popupYear = clone.querySelector('.popup-year');
      const popupDuration = clone.querySelector('.popup-duration');
      const popupDesc = clone.querySelector('.popup-desc');
      const watchlistBtn = clone.querySelector('.watchlist-btn') as HTMLElement;
      const playBtnSmall = clone.querySelector('.play-btn-small');
      
      const progressBar = clone.querySelector('.progress-bar') as HTMLElement;
      
      const displayTitle = lang === 'vi' ? item.name : (item.origin_name || item.name);
      const thumbUrl = getImageUrl(item.thumb_url || item.poster_url); 

      if(link) link.href = `/watch/${item.slug}`;
      if(img) {
          img.src = thumbUrl; 
          img.alt = displayTitle;
      }
      // Populate text info
      if(titleEl) titleEl.textContent = displayTitle;
      if(episodeEl) episodeEl.textContent = item.year ? String(item.year) : ''; 
      if(durationBadge && item.duration) durationBadge.textContent = item.duration;
      
      // Populate popup info
      if(popupTitle) popupTitle.textContent = displayTitle;
      if(popupYear) popupYear.textContent = item.year ? String(item.year) : '';
      if(popupDuration && item.duration) popupDuration.textContent = item.duration;
      if(popupDesc) popupDesc.textContent = item.overview || ''; // Use saved overview

      // Logic for watchlist button
      if (watchlistBtn) {
          watchlistBtn.dataset.movie = JSON.stringify(item);
          const active = isInWatchlist(item.slug);
          if (active) {
              watchlistBtn.classList.add('active');
              const svg = watchlistBtn.querySelector('svg');
              if(svg) svg.innerHTML = '<polyline points="20 6 9 17 4 12"></polyline>';
          }
          
          watchlistBtn.addEventListener('click', (e) => {
              e.preventDefault();
              e.stopPropagation();
              
              if ((watchlistBtn as any)._processing) return;
              (watchlistBtn as any)._processing = true;

              const added = toggleWatchlist(item);
              const svg = watchlistBtn.querySelector('svg');
              if (added) {
                  watchlistBtn.classList.add('active');
                  if (svg) svg.innerHTML = '<polyline points="20 6 9 17 4 12"></polyline>';
                  if (typeof (window as any).showToast === 'function') (window as any).showToast('Đã thêm vào danh sách xem', 'success');
              } else {
                  watchlistBtn.classList.remove('active');
                  if (svg) svg.innerHTML = '<path d="M12 5v14M5 12h14"/>';
                  if (typeof (window as any).showToast === 'function') (window as any).showToast('Đã xóa khỏi danh sách xem', 'success');
              }
              
              setTimeout(() => { (watchlistBtn as any)._processing = false; }, 300);
          });
      }
      
      if(playBtnSmall) {
          playBtnSmall.addEventListener('click', (e) => {
              // let click bubble to anchor
          });
      }

      // Random progress for demo is fine
      if(progressBar) progressBar.style.width = Math.floor(Math.random() * 80 + 10) + '%'; 

      track.appendChild(clone);
    });
  }

  // Initial Render
  renderContinueWatching();

  // Re-render on updates (e.g. if user clears history in another tab)
  window.addEventListener('history-updated', renderContinueWatching);

  // Carousel Navigation
  const track = document.getElementById('continue-watching-track');
  const prevBtn = document.getElementById('cw-prev');
  const nextBtn = document.getElementById('cw-next');
  
  const scrollAmount = 320;

  prevBtn?.addEventListener('click', () => {
    track?.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
  });

  nextBtn?.addEventListener('click', () => {
    track?.scrollBy({ left: scrollAmount, behavior: 'smooth' });
  });
</script>
