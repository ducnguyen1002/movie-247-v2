---
import ContinueWatchingCard from './ContinueWatchingCard.astro';
import { getImageUrl } from '../../lib/movieService';
import { useTranslations } from '../../lib/useTranslations';

interface Props {
  title: string;
  movies: any[];
  viewAllLink?: string;
}

const { title, movies, viewAllLink } = Astro.props;

// Get translations
const langCookie = Astro.cookies.get('language');
const { translations } = useTranslations(langCookie?.value);
---

<section class="continue-section">
  <div class="container">
    <div class="carousel-header">
      <h2 class="carousel-title">{title}</h2>
      <div class="carousel-actions">
        {viewAllLink && (
          <a href={viewAllLink} class="view-all">
            {translations.common.viewAll}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        )}
        <div class="carousel-nav">
          <button class="nav-btn nav-prev" aria-label="Previous">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
          </button>
          <button class="nav-btn nav-next" aria-label="Next">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class="carousel-track continue-track">
      {
        movies.map((movie: any, index: number) => (
          <ContinueWatchingCard
            id={movie.slug}
            title={movie.name}
            episode={movie.episode_current || ''}
            poster={getImageUrl(movie.thumb_url || movie.poster_url)}
            duration={movie.time || ''}
            progress={Math.floor(Math.random() * 60) + 20}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .continue-section {
    padding: var(--spacing-lg) 0;
  }

  .carousel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-lg);
    gap: var(--spacing-md);
  }

  .carousel-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
  }

  .carousel-actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .view-all {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .view-all:hover {
    color: var(--color-primary);
  }

  .carousel-nav {
    display: flex;
    gap: var(--spacing-xs);
  }

  .nav-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .nav-btn:hover {
    background: var(--color-surface-hover);
    color: var(--color-text-primary);
  }

  .continue-track {
    display: flex;
    gap: var(--spacing-md);
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    padding-bottom: var(--spacing-sm);
  }

  .continue-track::-webkit-scrollbar {
    display: none;
  }

  .continue-track > :global(*) {
    flex: 0 0 calc((100% - 2 * var(--spacing-md)) / 3);
    min-width: 280px;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .continue-track > :global(*) {
      flex: 0 0 calc((100% - var(--spacing-md)) / 2);
      min-width: 260px;
    }
  }

  @media (max-width: 576px) {
    .continue-track > :global(*) {
      flex: 0 0 85%;
      min-width: 240px;
    }

    .view-all {
      display: none;
    }
  }
</style>

<script>
  document.querySelectorAll('.continue-section').forEach(section => {
    const track = section.querySelector('.continue-track') as HTMLElement;
    const prevBtn = section.querySelector('.nav-prev');
    const nextBtn = section.querySelector('.nav-next');
    
    const scrollAmount = 320;

    prevBtn?.addEventListener('click', () => {
      track?.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextBtn?.addEventListener('click', () => {
      track?.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
  });
</script>
