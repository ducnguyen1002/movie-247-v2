---
interface Props {
  id: string;
  rank: number;
  title: string;
  poster: string;
  rating?: number;
  year?: number;
}

const { id, rank, title, poster, rating = 8.0, year } = Astro.props;
---

<a href={`/movies/${id}`} class="ranking-card">
  <div class="ranking-card__rank">
    <span class="rank-number">{rank}</span>
  </div>
  <div class="ranking-card__content">
    <div class="ranking-card__poster">
      <img src={poster} alt={title} loading="lazy"/>
      <div class="ranking-card__overlay">
        <button class="play-btn" aria-label="Xem phim">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <polygon points="5 3 19 12 5 21 5 3"/>
          </svg>
        </button>
      </div>
    </div>
    <div class="ranking-card__info">
      <h3 class="ranking-card__title">{title}</h3>
      <div class="ranking-card__meta">
        <span class="ranking-card__rating">
          <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
          </svg>
          {rating.toFixed(1)}
        </span>
        {year && (
          <>
            <span class="ranking-card__dot">â€¢</span>
            <span class="ranking-card__year">{year}</span>
          </>
        )}
      </div>
    </div>
  </div>
</a>

<style>
  .ranking-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: transform var(--transition-normal);
    flex-shrink: 0;
  }

  .ranking-card:hover {
    transform: translateY(-2px);
  }

  .ranking-card:hover .ranking-card__overlay {
    opacity: 1;
  }

  .ranking-card:hover img {
    transform: scale(1.05);
  }

  /* Rank Number */
  .ranking-card__rank {
    flex-shrink: 0;
    min-width: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rank-number {
    font-family: 'Inter', sans-serif;
    font-size: 4rem;
    font-weight: 800;
    color: transparent;
    -webkit-text-stroke: 2px var(--color-text-muted);
    line-height: 1;
    letter-spacing: -4px;
    transition: all var(--transition-fast);
  }

  .ranking-card:hover .rank-number {
    -webkit-text-stroke-color: var(--color-primary);
    text-shadow: 0 0 20px rgba(29, 185, 84, 0.3);
  }

  /* Content */
  .ranking-card__content {
    display: flex;
    gap: var(--spacing-sm);
    flex: 1;
    min-width: 0;
  }

  /* Poster */
  .ranking-card__poster {
    position: relative;
    width: 70px;
    aspect-ratio: 2/3;
    overflow: hidden;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    flex-shrink: 0;
  }

  .ranking-card__poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .ranking-card__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .play-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    color: var(--color-background);
    transition: transform var(--transition-fast);
  }

  .play-btn:hover {
    transform: scale(1.1);
  }

  /* Info */
  .ranking-card__info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 0;
    padding: var(--spacing-xs) 0;
  }

  .ranking-card__title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    margin-bottom: 4px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.3;
  }

  .ranking-card__meta {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  .ranking-card__rating {
    display: flex;
    align-items: center;
    gap: 3px;
    color: var(--color-rating);
  }

  .ranking-card__rating svg {
    fill: var(--color-rating);
  }

  .ranking-card__dot {
    font-size: 8px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .rank-number {
      font-size: 3rem;
      -webkit-text-stroke-width: 1.5px;
    }

    .ranking-card__rank {
      min-width: 40px;
    }

    .ranking-card__poster {
      width: 60px;
    }
  }

  @media (max-width: 480px) {
    .rank-number {
      font-size: 2.5rem;
    }

    .ranking-card__poster {
      width: 50px;
    }
  }
</style>
