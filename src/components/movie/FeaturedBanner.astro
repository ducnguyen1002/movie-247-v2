---
interface Props {
  id: string;
  title: string;
  backdrop: string;
  rating?: number;
  year?: number;
  genres?: string[];
  quality?: string;
}

const { id, title, backdrop, rating = 8.0, year, genres = [], quality = 'HD' } = Astro.props;
---

<section class="featured-banner">
  <div class="container">
    <div class="featured-banner__content">
      <div class="featured-banner__text">
        <span class="featured-banner__label">Khám phá theo thể loại</span>
        <h2 class="featured-banner__title">{title}</h2>
        <div class="featured-banner__meta">
          {rating && (
            <span class="featured-banner__rating">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
              {rating.toFixed(1)}
            </span>
          )}
          {quality && <span class="featured-banner__badge">{quality}</span>}
          {year && <span>{year}</span>}
          {genres.slice(0, 2).map((genre, i) => (
            <>
              {(year || i > 0) && <span class="featured-banner__dot">•</span>}
              <span>{genre}</span>
            </>
          ))}
        </div>
        <div class="featured-banner__actions">
          <a href={`/watch/${id}`} class="btn btn-primary btn-lg">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="5 3 19 12 5 21 5 3"/>
            </svg>
            Xem ngay
          </a>
          <a href={`/movies/${id}`} class="btn btn-secondary btn-lg">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
            Chi tiết
          </a>
        </div>
      </div>
      <div class="featured-banner__image">
        <img src={backdrop} alt={title} loading="lazy"/>
        <div class="featured-banner__gradient"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .featured-banner {
    padding: var(--spacing-xl) 0;
  }

  .featured-banner__content {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: 360px;
    display: flex;
    align-items: flex-end;
  }

  /* Background Image */
  .featured-banner__image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .featured-banner__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-banner__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.95) 0%,
      rgba(0, 0, 0, 0.7) 30%,
      rgba(0, 0, 0, 0.3) 60%,
      transparent 100%
    );
  }

  [data-theme="light"] .featured-banner__gradient {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.65) 30%,
      rgba(0, 0, 0, 0.3) 60%,
      transparent 100%
    );
  }

  /* Text Content */
  .featured-banner__text {
    position: relative;
    z-index: 1;
    padding: var(--spacing-2xl);
    max-width: 600px;
  }

  .featured-banner__label {
    display: inline-block;
    font-size: var(--font-size-xs);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--spacing-sm);
    font-weight: var(--font-weight-semibold);
  }

  .featured-banner__title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: #FFFFFF;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .featured-banner__meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-lg);
  }

  .featured-banner__rating {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--color-rating);
  }

  .featured-banner__rating svg {
    fill: var(--color-rating);
  }

  .featured-banner__badge {
    padding: 2px 8px;
    background: var(--color-primary);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    color: var(--color-background);
  }

  .featured-banner__dot {
    font-size: 8px;
  }

  .featured-banner__actions {
    display: flex;
    gap: var(--spacing-md);
  }

  .featured-banner__actions .btn {
    color: #FFFFFF;
  }

  .featured-banner__actions .btn-primary {
    color: var(--color-background);
  }

  .featured-banner__actions .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
  }

  .featured-banner__actions .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .featured-banner__content {
      min-height: 300px;
    }

    .featured-banner__text {
      padding: var(--spacing-lg);
    }

    .featured-banner__title {
      font-size: var(--font-size-2xl);
    }

    .featured-banner__actions {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .featured-banner__actions .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .featured-banner__title {
      font-size: var(--font-size-xl);
    }

    .featured-banner__meta {
      font-size: var(--font-size-xs);
    }
  }
</style>
