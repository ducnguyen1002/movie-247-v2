---
interface Props {
  id: string;
  title: string;
  episode?: string;
  poster: string;
  duration?: string;
  progress?: number; // 0-100
}

const { id, title, episode, poster, duration, progress = 0 } = Astro.props;
---

<a href={`/watch/${id}`} class="continue-card">
  <div class="continue-card__poster">
    <img src={poster} alt={title} loading="lazy"/>
    <div class="continue-card__overlay">
      <button class="play-btn" aria-label="Tiếp tục xem">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <polygon points="5 3 19 12 5 21 5 3"/>
        </svg>
      </button>
    </div>
    <!-- Progress Bar -->
    <div class="continue-card__progress">
      <div class="progress-bar" style={`width: ${progress}%`}></div>
    </div>
    <!-- Duration Badge -->
    {duration && (
      <span class="continue-card__duration">{duration}</span>
    )}
  </div>
  <div class="continue-card__info">
    <h3 class="continue-card__title">{title}</h3>
    {episode && (
      <span class="continue-card__episode">{episode}</span>
    )}
  </div>
</a>

<style>
  .continue-card {
    display: block;
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--transition-normal);
    flex-shrink: 0;
  }

  .continue-card:hover {
    transform: translateY(-4px);
  }

  .continue-card:hover .continue-card__overlay {
    opacity: 1;
  }

  .continue-card:hover img {
    transform: scale(1.05);
  }

  /* Poster - 16:9 ratio */
  .continue-card__poster {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: var(--radius-lg);
    background: var(--color-surface);
  }

  .continue-card__poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .continue-card__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .play-btn {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    color: var(--color-background);
    transition: transform var(--transition-fast);
  }

  .play-btn:hover {
    transform: scale(1.1);
  }

  .play-btn svg {
    margin-left: 3px;
  }

  /* Progress Bar */
  .continue-card__progress {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
  }

  .progress-bar {
    height: 100%;
    background: var(--color-primary);
    border-radius: 0 2px 2px 0;
    transition: width var(--transition-normal);
  }

  /* Duration Badge */
  .continue-card__duration {
    position: absolute;
    bottom: 12px;
    right: 8px;
    padding: 2px 6px;
    background: rgba(0, 0, 0, 0.8);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  /* Info */
  .continue-card__info {
    padding: var(--spacing-sm) 0;
  }

  .continue-card__title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    margin-bottom: 2px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .continue-card__episode {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 576px) {
    .play-btn {
      width: 44px;
      height: 44px;
    }

    .play-btn svg {
      width: 18px;
      height: 18px;
    }
  }
</style>
