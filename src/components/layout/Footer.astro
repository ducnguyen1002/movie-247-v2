---
import { useTranslations } from '../../lib/useTranslations';

const currentYear = new Date().getFullYear();

// Get translations
const langCookie = Astro.cookies.get('language');
const { translations } = useTranslations(langCookie?.value);

const footerLinks = [
  { label: translations.nav.home, href: '/' },
  { label: translations.nav.movies, href: '/movies' },
  { label: translations.nav.tvShows, href: '/tv-shows' },
  { label: translations.nav.about, href: '/about' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <!-- Brand & Tagline -->
      <div class="footer__brand">
        <p class="footer__tagline">
          {translations.footer.description}
        </p>
      </div>

      <!-- Navigation -->
      <div class="footer__nav">
        {footerLinks.map(link => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>

      <!-- Social Links -->
      <div class="footer__social">
        <a href="#" class="social-link" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
        </a>
        <a href="#" class="social-link" aria-label="Facebook">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
          </svg>
        </a>
        <a href="#" class="social-link" aria-label="Twitter">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
          </svg>
        </a>
        <a href="#" class="social-link" aria-label="Google">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Bottom -->
    <div class="footer__bottom">
      <div class="footer__legal">
        <a href="/privacy">{translations.footer.privacy}</a>
        <a href="/terms">{translations.footer.terms}</a>
      </div>
      <p class="footer__copyright">{translations.footer.copyright.replace('2024', currentYear.toString())}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-background);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
    margin-top: var(--spacing-3xl);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }

  /* Brand */
  .footer__tagline {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: 1.5;
    max-width: 280px;
  }

  /* Navigation */
  .footer__nav {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xl);
  }

  .footer__nav a {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .footer__nav a:hover {
    color: var(--color-text-primary);
  }

  /* Social */
  .footer__social {
    display: flex;
    justify-content: flex-end;
    gap: var(--spacing-md);
  }

  .social-link {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .social-link:hover {
    color: var(--color-text-primary);
  }

  /* Bottom */
  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .footer__legal {
    display: flex;
    gap: var(--spacing-lg);
  }

  .footer__legal a {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  .footer__legal a:hover {
    color: var(--color-text-secondary);
  }

  .footer__copyright {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .footer__grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--spacing-xl);
    }

    .footer__tagline {
      max-width: none;
    }

    .footer__nav {
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__bottom {
      flex-direction: column;
      gap: var(--spacing-md);
      text-align: center;
    }
  }
</style>
