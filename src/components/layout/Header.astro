<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    height: var(--header-height);
    background: var(--color-surface);
    backdrop-filter: blur(8px);
    transition: background var(--transition-normal);
    border-bottom: 1px solid var(--color-border);
  }



  /* Dark theme specific header */
  [data-theme="dark"] .header {
    background: rgba(0, 0, 0, 0.95);
  }


  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: var(--spacing-xl);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
  }

  .header__logo:hover {
    color: var(--color-text-primary);
  }

  .logo-icon {
    font-size: var(--font-size-xl);
  }

  .logo-text {
    color: var(--color-primary);
  }

  /* Navigation */
  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    gap: var(--spacing-xl);
  }

  .nav-link {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-muted);
    padding: var(--spacing-xs) 0;
    position: relative;
    transition: color var(--transition-fast);
  }

  .nav-link:hover,
  .nav-link--active {
    color: var(--color-text-primary);
  }

  /* Actions */
  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .header-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
  }

  .header-btn:hover {
    color: var(--color-text-primary);
    background: var(--color-surface);
  }

  /* Language & Theme Buttons */
  .language-wrapper {
    position: relative;
  }

  .lang-btn {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 0 8px;
  }

  .lang-flag {
    font-size: 14px;
  }

  .lang-text {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
  }

  .lang-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 4px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all var(--transition-fast);
    z-index: 100;
    min-width: 130px;
    overflow: hidden;
  }

  .lang-dropdown.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .lang-option {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 14px;
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .lang-option:hover {
    background: var(--color-surface-hover);
    color: var(--color-text-primary);
  }

  .lang-option.active {
    color: var(--color-primary);
  }

  /* Dark theme - show moon icon */
  html[data-theme="light"] .theme-icon--sun {
    display: none;
  }
  html[data-theme="light"] .theme-icon--moon {
    display: block;
  }

  /* Light theme - show sun icon */
  html[data-theme="dark"] .theme-icon--sun {
    display: block;
  }
  html[data-theme="dark"] .theme-icon--moon {
    display: none;
  }

  .mobile-menu-btn {
    display: none;
    width: 36px;
    height: 36px;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: none;
    position: absolute;
    top: var(--header-height);
    left: 0;
    right: 0;
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-md);
  }

  .mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .mobile-nav-link {
    display: block;
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link--active {
    background: var(--color-surface-hover);
    color: var(--color-text-primary);
  }

  .mobile-nav-divider {
    height: 1px;
    background: var(--color-border);
    margin: var(--spacing-sm) 0;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .header__nav {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .header.open .mobile-nav {
      display: block;
    }

    .hide-on-mobile {
      display: none !important;
    }

    .mobile-nav-item.secondary-actions {
      padding: var(--spacing-md);
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .mobile-action-btn {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      width: 100%;
      padding: var(--spacing-sm) var(--spacing-md);
      background: var(--color-surface-hover);
      border-radius: var(--radius-md);
      font-size: var(--font-size-sm);
      color: var(--color-text-primary);
    }

    .theme-icon-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 24px;
      height: 24px;
    }

    .mobile-lang-buttons {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-sm);
    }

    .mobile-lang-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-xs);
      padding: var(--spacing-sm);
      background: var(--color-surface-hover);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-md);
      font-size: var(--font-size-sm);
      color: var(--color-text-secondary);
      transition: all var(--transition-fast);
    }

    .mobile-lang-btn.active {
      background: var(--color-primary);
      color: var(--color-background);
      border-color: var(--color-primary);
    }
  }


  /* Light mode header styles */
  [data-theme="light"] .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
  }

  [data-theme="light"] .header .header__logo,
  [data-theme="light"] .header .logo-text {
    color: var(--color-text-primary);
  }

  [data-theme="light"] .header .nav-link {
    color: var(--color-text-secondary);
  }

  [data-theme="light"] .header .nav-link:hover,
  [data-theme="light"] .header .nav-link--active {
    color: var(--color-text-primary);
  }

  [data-theme="light"] .header .header-btn {
    color: var(--color-text-secondary);
  }

  [data-theme="light"] .header .header-btn:hover {
    color: var(--color-text-primary);
    background: var(--color-surface-hover);
  }

  [data-theme="light"] .header .lang-btn .lang-text {
    color: var(--color-text-secondary);
  }

  [data-theme="light"] .header .mobile-menu-btn {
    color: var(--color-text-primary);
  }
</style>

<script>
  import { initTheme, toggleTheme } from '../../lib/theme';

  // Initialize theme on page load
  initTheme();

  // Mobile menu
  const header = document.querySelector('.header');
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');

  mobileMenuBtn?.addEventListener('click', () => {
    header?.classList.toggle('open');
  });

  document.addEventListener('click', (e) => {
    if (!header?.contains(e.target as Node)) {
      header?.classList.remove('open');
    }
  });

  // Scroll behavior
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    if (currentScroll > 100) {
      header?.classList.remove('header--transparent');
    }
    lastScroll = currentScroll;
  });

  // Language switcher - using dropdown and cookies
  const langBtn = document.getElementById('headerLangBtn');
  const langDropdown = document.getElementById('headerLangDropdown');
  const langOptions = langDropdown?.querySelectorAll('.lang-option');
  
  function getCookie(name: string): string | null {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
    return null;
  }
  
  function setCookie(name: string, value: string, days: number = 365) {
    const expires = new Date();
    expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
    document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/`;
  }
  
  // Toggle dropdown
  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    langDropdown?.classList.toggle('show');
  });

  // Close dropdown on outside click
  document.addEventListener('click', () => {
    langDropdown?.classList.remove('show');
  });

  // Handle language selection for both desktop and mobile
  const allLangOptions = document.querySelectorAll('[data-lang]');
  allLangOptions.forEach(option => {
    option.addEventListener('click', (e) => {
      e.stopPropagation();
      const lang = (option as HTMLElement).dataset.lang;
      
      if (lang) {
        setCookie('language', lang);
        localStorage.setItem('language', lang);
        document.documentElement.setAttribute('lang', lang);
        window.location.reload();
      }
    });
  });

  // Theme switcher for both desktop and mobile
  const themeBtns = document.querySelectorAll('[data-theme-switcher]');
  themeBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      toggleTheme();
    });
  });
</script>
