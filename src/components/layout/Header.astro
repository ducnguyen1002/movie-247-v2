---
interface Props {
  isTransparent?: boolean;
}

const { isTransparent = false } = Astro.props;
const currentPath = Astro.url.pathname;

// Get language from cookie or default to Vietnamese
const langCookie = Astro.cookies.get('language');
const lang = (langCookie?.value === 'en' || langCookie?.value === 'vi') ? langCookie.value : 'vi';

// Import translations dynamically
const translations = await import('../../lib/translations');
const t = translations.getTranslations(lang as 'vi' | 'en');

const navLinks = [
  { href: '/', label: t.nav.home },
  { href: '/movies', label: t.nav.movies },
  { href: '/tv-shows', label: t.nav.tvShows },
  { href: '/about', label: t.nav.about },
];
---

<header class:list={['header', { 'header--transparent': isTransparent }]}>
  <div class="container">
    <div class="header__inner">
      <!-- Logo -->
      <a href="/" class="header__logo">
        <span class="logo-icon">沁ｬ</span>
        <span class="logo-text">Movie247</span>
      </a>

      <!-- Navigation -->
      <nav class="header__nav">
        <ul class="nav-list">
          {navLinks.map(link => (
            <li class="nav-item">
              <a 
                href={link.href} 
                class:list={['nav-link', { 'nav-link--active': currentPath === link.href }]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Actions -->
      <div class="header__actions">
        <!-- Language Switcher -->
        <button class="header-btn lang-btn" aria-label="Chuy盻ハ ngﾃｴn ng盻ｯ" data-lang-switcher>
          <span class="lang-text">VI</span>
        </button>

        <!-- Theme Switcher -->
        <button class="header-btn theme-btn" aria-label="Chuy盻ハ theme" data-theme-switcher>
          <svg class="theme-icon theme-icon--sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"/>
            <line x1="12" y1="1" x2="12" y2="3"/>
            <line x1="12" y1="21" x2="12" y2="23"/>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
            <line x1="1" y1="12" x2="3" y2="12"/>
            <line x1="21" y1="12" x2="23" y2="12"/>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
          </svg>
          <svg class="theme-icon theme-icon--moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
          </svg>
        </button>

        <!-- Search -->
        <a href="/search" class="header-btn" aria-label="Tﾃｬm ki蘯ｿm">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </a>

        <!-- User -->
        <a href="/login" class="header-btn user-btn" aria-label="Tﾃi kho蘯｣n">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>

        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-btn" aria-label="Menu">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 12h18M3 6h18M3 18h18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div class="mobile-nav">
    <ul class="mobile-nav-list">
      {navLinks.map(link => (
        <li>
          <a 
            href={link.href} 
            class:list={['mobile-nav-link', { 'mobile-nav-link--active': currentPath === link.href }]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li class="mobile-nav-divider"></li>
      <li><a href="/login" class="mobile-nav-link">ﾄ斉ハg Nh蘯ｭp</a></li>
      <li><a href="/register" class="mobile-nav-link">ﾄ斉ハg Kﾃｽ</a></li>
    </ul>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    height: var(--header-height);
    background: var(--color-surface);
    backdrop-filter: blur(8px);
    transition: background var(--transition-normal);
    border-bottom: 1px solid var(--color-border);
  }

  .header--transparent {
    background: transparent;
    backdrop-filter: none;
    border-bottom: none;
  }

  /* Dark theme specific header */
  [data-theme="dark"] .header {
    background: rgba(0, 0, 0, 0.95);
  }

  [data-theme="dark"] .header--transparent {
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), transparent);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: var(--spacing-xl);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
  }

  .header__logo:hover {
    color: var(--color-text-primary);
  }

  .logo-icon {
    font-size: var(--font-size-xl);
  }

  .logo-text {
    color: var(--color-primary);
  }

  /* Navigation */
  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    gap: var(--spacing-xl);
  }

  .nav-link {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-muted);
    padding: var(--spacing-xs) 0;
    position: relative;
    transition: color var(--transition-fast);
  }

  .nav-link:hover,
  .nav-link--active {
    color: var(--color-text-primary);
  }

  /* Actions */
  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .header-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
  }

  .header-btn:hover {
    color: var(--color-text-primary);
    background: var(--color-surface);
  }

  /* Language & Theme Buttons */
  .lang-btn .lang-text {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
  }

  .theme-icon--sun {
    display: none;
  }

  .theme-icon--moon {
    display: block;
  }

  [data-theme="light"] .theme-icon--sun {
    display: block;
  }

  [data-theme="light"] .theme-icon--moon {
    display: none;
  }

  .mobile-menu-btn {
    display: none;
    width: 36px;
    height: 36px;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: none;
    position: absolute;
    top: var(--header-height);
    left: 0;
    right: 0;
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-md);
  }

  .mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .mobile-nav-link {
    display: block;
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link--active {
    background: var(--color-surface-hover);
    color: var(--color-text-primary);
  }

  .mobile-nav-divider {
    height: 1px;
    background: var(--color-border);
    margin: var(--spacing-sm) 0;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .header__nav {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .header.open .mobile-nav {
      display: block;
    }
  }
</style>

<script>
  import { initTheme, toggleTheme } from '../../lib/theme';

  // Initialize theme on page load
  initTheme();

  // Mobile menu
  const header = document.querySelector('.header');
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');

  mobileMenuBtn?.addEventListener('click', () => {
    header?.classList.toggle('open');
  });

  document.addEventListener('click', (e) => {
    if (!header?.contains(e.target as Node)) {
      header?.classList.remove('open');
    }
  });

  // Scroll behavior
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    if (currentScroll > 100) {
      header?.classList.remove('header--transparent');
    }
    lastScroll = currentScroll;
  });

  // Language switcher - using cookies
  const langBtn = document.querySelector('[data-lang-switcher]');
  const langText = langBtn?.querySelector('.lang-text');
  
  function getCookie(name: string): string | null {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
    return null;
  }
  
  function setCookie(name: string, value: string, days: number = 365) {
    const expires = new Date();
    expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
    document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/`;
  }
  
  function getCurrentLang(): string {
    const lang = getCookie('language');
    return (lang === 'en' || lang === 'vi') ? lang : 'vi';
  }
  
  function updateLangButton() {
    const currentLang = getCurrentLang();
    if (langText) {
      langText.textContent = currentLang.toUpperCase();
    }
  }
  
  updateLangButton();
  
  langBtn?.addEventListener('click', () => {
    const currentLang = getCurrentLang();
    const newLang = currentLang === 'vi' ? 'en' : 'vi';
    setCookie('language', newLang);
    // Reload page to apply translations
    window.location.reload();
  });

  // Theme switcher
  const themeBtn = document.querySelector('[data-theme-switcher]');
  
  themeBtn?.addEventListener('click', () => {
    toggleTheme();
  });
</script>
